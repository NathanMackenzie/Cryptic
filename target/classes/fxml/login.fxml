<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<VBox fx:id="root" alignment="CENTER" maxHeight="350.0" maxWidth="250.0" minHeight="350.0" minWidth="250.0" prefHeight="350.0" prefWidth="250.0" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cryptic.controller.LoginController">
   <children>
      <AnchorPane prefHeight="40.0" prefWidth="250.0">
         <children>
            <Button fx:id="exit" layoutY="7.0" mnemonicParsing="false" onAction="#exit" AnchorPane.leftAnchor="-2.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
      <Label fx:id="logo" text="Cryptic">
         <font>
            <Font name="Avenir Medium Oblique" size="48.0" />
         </font>
         <VBox.margin>
            <Insets bottom="30.0" />
         </VBox.margin></Label>
      <TextField fx:id="userNameField" promptText="User Name">
         <VBox.margin>
            <Insets bottom="15.0" left="10.0" right="10.0" />
         </VBox.margin>
      </TextField>
      <PasswordField fx:id="passwordField" promptText="Password">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </VBox.margin>
      </PasswordField>
      <Text fx:id="warningLabel" fill="#ff592f" strokeType="OUTSIDE" strokeWidth="0.0">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
         <font>
            <Font name="Arial" size="13.0" />
         </font></Text>
      <Button fx:id="login" mnemonicParsing="false" onAction="#login" prefHeight="27.0" prefWidth="100.0" text="Login">
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin></Button>
      <Button fx:id="newUser" mnemonicParsing="false" onAction="#newUser" text="New User">
         <VBox.margin>
            <Insets bottom="45.0" />
         </VBox.margin></Button>
   </children>
</VBox>
